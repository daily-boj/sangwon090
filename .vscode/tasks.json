{
    "version": "2.0.0",
    "tasks": [
        {
			"type": "shell",
			"label": "clang",
			"command": "clang",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/bin/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
        }
    ]
}